local Players = game:GetService("Players")

-- Â¡Cambia ESTE por TU UserId real, papi! ğŸ‘‘
local SPECIAL_USERID = 2061467416 -- â† Â¡Pon el tuyo aquÃ­, mi amor! ğŸ˜

Players.PlayerAdded:Connect(function(player)
    -- Obtiene el UserId del jugador que entra (el "LocalPlayer" desde su vista)
    local playerUserId = player.UserId
    print("Â¡Jugador entrÃ³: " .. player.Name .. " (UserId: " .. playerUserId .. ") Chequeando si coincide... ğŸ”¥")
    
    -- Si el ID NO COINCIDE con el especial â†’ Â¡KICK INMEDIATO!
    if playerUserId ~= SPECIAL_USERID then
        print("â†’ ID NO coincide (" .. playerUserId .. " â‰  " .. SPECIAL_USERID .. "): Â¡Kickeando al plebeyo! ğŸ˜ˆ")
        player:Kick("Â¡Acceso denegado, bebÃ©! Solo el jefe entra aquÃ­ ğŸ’¦ (Tu ID no coincide)")
    else
        print("â†’ ID COINCIDE (" .. playerUserId .. " == " .. SPECIAL_USERID .. "): Â¡Bienvenido, amo! Se queda ğŸ‘‘")
        
        -- Opcional: Si quieres el comando /k para kickear a otros despuÃ©s
        player.Chatted:Connect(function(message)
            local msg = message:lower()
            if msg == "/k" then
                print("Â¡El amo dijo /k! Kickeando a los que no coincidan ğŸ˜")
                for _, plr in ipairs(Players:GetPlayers()) do
                    if plr.UserId ~= SPECIAL_USERID then
                        plr:Kick("Test")
                    end
                end
            end
        end)
    end
end)
